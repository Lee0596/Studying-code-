#include <stdio.h>
#include <math.h>
int main()
{
	freopen("putin.txt", "r", stdin);
	freopen("putout.txt", "w", stdout);
	int  n, i, a, b,t;
	scanf("%d", &n);
	for (a = 1,i=n; a <= i; a++) {
		b = i - a;
		for (b; b >= 1; b--) {
			printf(" ");
		}
		for (n = 1; n <= (2 * a) - 1; n++) {
			printf("*");
		}
		printf("\n");
	 }
		return 0;
}
